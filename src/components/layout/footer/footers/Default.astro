---
import { generalConfig } from "~/site.config";
import { Image } from "astro:assets";
import FooterNavigation from "~/components/layout/footer/FooterNavigation.astro";
import SocialLinks from "~/components/layout/footer/SocialLinks.astro";
import SiteLogo from "~/assets/svg/logo-1-1.svg";
---

<footer class="bg-primary-100 dark:bg-primary-900">
  <div class="mx-auto flex max-w-5xl justify-between gap-8 p-4 py-8">
    <div class="flex flex-col items-center gap-8 md:flex-row">
      <a
        href={Astro.site}
        aria-label="Return to home page"
        class="self-start grayscale transition duration-300 hover:grayscale-0 md:self-center"
      >
        <Image
          class="aspect-square object-contain"
          src={SiteLogo}
          alt=""
          format="svg"
          class="w-24"
        />
      </a>
      <div class="flex flex-col gap-4 md:gap-2">
        <div class="text-xl font-semibold">{generalConfig.short_name}</div>
        <div class="max-w-[30ch] text-sm">{generalConfig.footer_description}</div>
      </div>
    </div>

    <FooterNavigation />
  </div>

  <div
    class="mx-auto flex max-w-5xl flex-col items-center gap-2 border-t-2 border-white p-4 md:flex-row md:justify-between dark:border-black"
  >
    <div class="text-sm">
      {generalConfig.footer_copyright}
    </div>

    <SocialLinks />
  </div>
</footer>
