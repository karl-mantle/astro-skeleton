---
// https://umami.is/docs/collect-data
// ! if using GTM see: https://umami.is/docs/google-tag-manager
import { measurementConfig } from "~/site.config";

export interface Props {
  partytown?: boolean;
}

const { partytown = false } = Astro.props;
const attrs = partytown ? { type: "text/partytown" } : {};
---

<script
  is:inline
  src={measurementConfig.umami_source}
  data-website-id={measurementConfig.umami_id}
  defer
  {...attrs}></script>
